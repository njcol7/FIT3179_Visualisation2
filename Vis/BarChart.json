{
            "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
            "data": {
                "url" : "https://raw.githubusercontent.com/njcol7/FIT3179_Visualisation2/main/data/gt_europe.csv"
            },
            "width": 900,
            "height" : 300,
            "background": "#4b565e",
            "config": {
                "view": {
                    "stroke": "transparent"
                }
             },
            "transform" : [{
                "filter" : {
                    "not" : {
                        "field" : "attacktype1_txt",
                        "range": [0, 9]
                    }
                }
            }],
            "mark": "bar",
            "encoding": {
                "x": {
                    "field": "country_txt",
                    "type": "nominal",
                    "title": "Country",
                    "sort": "-y"
                },
                "y": {
                    "aggregate": "count",
                    "field": "country",
                    "title": "Number of Attacks Recorded",
                    "axis": {
                          "grid": false
                     }
                },
                "color": {
                    "field": "attacktype1_txt",
                        "legend" : {
                                    "title": "Attack Type",
                                     "orient": "none",
                                    "legendX": 800
                        }
                }
            }
        }
