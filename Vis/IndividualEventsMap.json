{ 
            "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
            "width": 950,
            "height" : 600,
            "projection": {
                "type": "azimuthalEqualArea"
            },
            "background": "#4b565e",
            "config": {
                "view": {
                    "stroke": "transparent"
                }
             },
            "layer": [{
                "data": {
                    "url": "https://raw.githubusercontent.com/njcol7/FIT3179_Visualisation2/main/data/ne_50m_europe.json",
                    "format": {
                        "type":"topojson",
                        "feature":"ne_50m_admin_0_countries"
                    }
                },
                "mark": {
                    "type":"geoshape",
                    "fill":"lightgray",
                    "stroke":"white"
                }
            },
            {
                "data": {
                    "url" : "https://raw.githubusercontent.com/njcol7/FIT3179_Visualisation2/main/data/gt_europe.csv"
                },
                "transform" : [{
                    "calculate": "year(datum.iyear)",
                    "as": "Year"
                },
                {
                    "filter" : "datum.longitude != 0 & datum.latitude != 0"
                },
                {
                    "filter" : "datum.longitude > -20 & datum.longitude < 50 & datum.latitude > 36 "
                },
                {
                    "filter" : {
                        "not" : {
                            "field" : "attacktype1_txt",
                            "range": [0, 9]
                        }
                    }
                },
                {
                     "filter" : {
                         "field" : "nkill",
                         "range": [0, 10000]
                     }
                }],
                "encoding":{
                    "longitude":{
                        "field":"longitude",
                        "type":"quantitative"
                    },
                    "latitude":{
                        "field":"latitude",
                        "type":"quantitative"
                    }
                },
                "layer" :[{
                    "selection":{
                        "YearSelector":{
                            "type" : "single",
                            "fields": ["Year"],
                            "name" : "Year",
                            "value" : 2017,
                            "bind":{
                                "Year" : {
                                    "input": "range",
                                    "min": 1970,
                                    "max": 2017,
                                    "step": 1,
                                    "value": 2017
                                }
                            },
                            "title" : "Test"
                        },
                        "TypeSelector":{
                             "type" : "multi",
                             "fields": ["attacktype1_txt"],
                             "bind" : "legend"
                        }
                    },
                    "transform": [{
                        "filter": {
                            "selection" : "YearSelector"
                        }
                    }],
                    "mark":{
                        "type" : "circle"
                    },
                    "encoding":{
                        "color": {
                            "field" : "attacktype1_txt",
                            "type" : "nominal",
                            "legend" : {
                                "title": "Attack Type",
                                "orient": "none",
                                "legendX": 700,
                                "labelColor": "white",
                                "titleColor": "white"
                            }

                        },
                        "opacity":{
                            "condition": {
                                 "selection": "TypeSelector",
                                 "value" : 1
                             },
                             "value": 0.2
                        },
                        "size": {
                            "field": "nkill",
                            "type":"quantitative",
                                "legend" : {
                                    "title": "Fatalities",
                                    "orient": "none",
                                    "legendX": 900
                            }
                        },
                        "tooltip" : [{
                            "title" : "Country",
                            "field" : "country_txt"
                        },
                        {
                            "title" : "City",
                            "field" : "city"
                        },
                        {
                            "title" : "Year",
                            "field" : "iyear"
                        },
                        {
                            "title" : "Type",
                            "field" : "attacktype1_txt"
                        },
                        {
                            "title" : "Fatalities",
                            "field" : "nkill"
                        }]
                    }
                }]
            },
        {
            "data": {
                "values": [
                    {"Latitude": 44, "Longitude": -2, "annotation": "Basque Conflict"},
                    {"Latitude": 55, "Longitude": -8, "annotation": "The Troubles"},
                    {"Latitude": 48, "Longitude": 38, "annotation": "War in Donbass"},
                    {"Latitude": 43, "Longitude": 43, "annotation": "Insurgency in the North Caucasus"}
                ]
            },
            "mark": {
                "type": "text",
                "align":"right",
                "baseline":"middle",
                "dx":-12,
                "fontSize":11.5,
                "fontStyle":"italic"
            },
            "encoding":{
                "latitude":{
                    "field" : "Latitude"
                },
                "longitude":{
                    "field" : "Longitude"
                },
                "text":{
                    "field":"annotation",
                    "type":"nominal"
                },
                "color": {
                        "value": "white"
                        }
            }
        }]
}
