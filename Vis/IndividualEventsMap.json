{ 
            "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
            "width": 1000,
            "height" : 600,
            "projection": {
                "type": "azimuthalEqualArea"
            },
            "background": "#4b565e",
            "config": {
                "view": {
                    "stroke": "transparent"
                }
             },
            "layer": [{
                "data": {
                    "url": "https://raw.githubusercontent.com/njcol7/FIT3179_Visualisation2/main/data/ne_50m_europe.json",
                    "format": {
                        "type":"topojson",
                        "feature":"ne_50m_admin_0_countries"
                    }
                },
                "mark": {
                    "type":"geoshape",
                    "fill":"lightgray",
                    "stroke":"white"
                }
            },
            {
                "data": {
                    "url" : "https://raw.githubusercontent.com/njcol7/FIT3179_Visualisation2/main/data/gt_europe.csv"
                },
                "transform" : [{
                    "calculate": "year(datum.iyear)",
                    "as": "Year"
                },
                {
                    "filter" : "datum.longitude != 0 & datum.latitude != 0"
                },
                {
                    "filter" : "datum.longitude > -40 & datum.longitude < 50 & datum.latitude > 36 "
                },
                {
                    "filter" : {
                        "not" : {
                            "field" : "attacktype1_txt",
                            "range": [0, 9]
                        }
                    }
                },
                {
                     "filter" : {
                         "field" : "nkill",
                         "range": [0, 10000]
                     }
                }],
                "encoding":{
                    "longitude":{
                        "field":"longitude",
                        "type":"quantitative"
                    },
                    "latitude":{
                        "field":"latitude",
                        "type":"quantitative"
                    }
                },
                "layer" :[{
                    "selection":{
                        "YearSelector":{
                            "type" : "single",
                            "fields": ["Year"],
                            "bind":{
                                "Year" : {
                                    "input": "range",
                                    "min": 1970,
                                    "max": 2017,
                                    "step": 1,
                                    "value": 2017
                                }
                            },
                            "title" : "Test"
                        },
                        "TypeSelector":{
                             "type" : "multi",
                             "fields": ["attacktype1_txt"],
                             "bind" : "legend"
                        }
                    },
                    "transform": [{
                        "filter": {
                            "selection" : "YearSelector"
                        }
                    }],
                    "mark":{
                        "type" : "circle"
                    },
                    "encoding":{
                        "color": {
                            "field" : "attacktype1_txt",
                            "type" : "nominal",
                            "legend" : {
                                "title": "Attack Type"
                            }

                        },
                        "opacity":{
                            "condition": {
                                 "selection": "TypeSelector",
                                 "value" : 1
                             },
                             "value": 0.2
                        },
                        "size": {
                            "field": "nkill",
                            "type":"quantitative"
                        },
                        "tooltip" : [{
                            "title" : "Country",
                            "field" : "country_txt"
                        },
                        {
                            "title" : "City",
                            "field" : "city"
                        },
                        {
                            "title" : "Year",
                            "field" : "iyear"
                        },
                        {
                            "title" : "Type",
                            "field" : "attacktype1_txt"
                        },
                        {
                            "title" : "Fatalities",
                            "field" : "nkill"
                        }]
                    }
                }]
            }]
}
